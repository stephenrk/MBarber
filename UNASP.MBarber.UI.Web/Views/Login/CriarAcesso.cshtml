@using UNASP.MBarber.UI.Web.ViewModels
@model LoginModel
@{
    ViewBag.Title = "Novo acesso";
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>MBarber | Login</title>

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="css/plugins/iCheck/custom.css" rel="stylesheet">

    <link href="~/Content/css/animate.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet">


</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <h3>Cadastro no MBarber</h3>
            <p>Crie sua conta agora!</p>

            @using (Html.BeginForm("CriarAcesso", "Login", FormMethod.Post, new { @class = "m-t", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Cliente.Nome, new { @class = "form-control", placeholder = "Nome" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Cliente.Sobrenome, new { @class = "form-control", placeholder = "Sobrenome" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Cliente.Telefone, new { @class = "form-control", placeholder = "Telefone" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Cliente.Cpf, new { @class = "form-control", placeholder = "CPF" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Senha, new { @class = "form-control", placeholder = "Senha" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Cliente.Endereco.Cep, new { @class = "form-control", placeholder = "CEP" , id = "cep", onblur="pesquisacep(this.value); " })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Cliente.Endereco.Logradouro, new { @class = "form-control", placeholder = "Rua", id = "rua" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Cliente.Endereco.Bairro, new { @class = "form-control", placeholder = "Bairro", id = "bairro" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Cliente.Endereco.Numero, new { @class = "form-control", placeholder = "Numero", id = "numero" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Cliente.Endereco.Complemento, new { @class = "form-control", placeholder = "Complemento" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Cliente.Endereco.Cidade, new { @class = "form-control", placeholder = "Cidade", id = "cidade" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Cliente.Endereco.Estado, new { @class = "form-control", placeholder = "Estado", id = "uf" })
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Registrar</button>

                <p class="text-muted text-center"><small>Já tem uma conta?</small></p>
                @Html.ActionLink("Login", "Index", null, new { @class = "btn btn-sm btn-white btn-block" })
            }

            <p class="m-t"> <small>MBarber &copy; 2018</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/Content/js/jquery-3.1.1.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Scripts/cep.js"></script>
    <!-- iCheck -->
    <script src="~/Content/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>


</html>
